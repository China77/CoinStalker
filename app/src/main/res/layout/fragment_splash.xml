<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SplashFragment"
    android:background="@color/colorPrimaryDark">



    <ImageView
        android:id="@+id/iv_coinstalker"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/coinstalker"
        android:layout_centerInParent="true" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/iv_coinRanking_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/coinranking" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:paddingBottom="5dp"
            android:text="@string/coinranking"
            android:textColor="@color/colorCoinRanking"
            android:textSize="18sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_data_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:text="@string/data_provider"
        android:textColor="@android:color/white" />


</RelativeLayout>